<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- Basic Configuration for Zeppelin -->
  <property>
    <name>zeppelin.server.addr</name>
    <value>0.0.0.0</value>
    <description>Zeppelin server address to bind</description>
  </property>

  <!-- Hive Configuration -->
  <property>
    <name>zeppelin.interpreter.hive.hiveserver2.url</name>
    <value>jdbc:hive2://hive-server:10000</value>
    <description>The HiveServer2 JDBC URL</description>
  </property>

  <property>
    <name>zeppelin.interpreter.hive.hive.metastore.uris</name>
    <value>thrift://hive-metastore:9083</value>
    <description>Hive metastore URI</description>
  </property>

  <property>
    <name>zeppelin.interpreter.hive.hive.metastore.warehouse.dir</name>
    <value>/user/hive/warehouse</value>
    <description>The location of Hive warehouse</description>
  </property>

  <property>
    <name>zeppelin.interpreter.hive.hive.exec.scratchdir</name>
    <value>/tmp/hive</value>
    <description>The scratch directory for Hive</description>
  </property>

  <property>
    <name>zeppelin.interpreter.hive.hive.exec.stagingdir</name>
    <value>/tmp/staging</value>
    <description>The staging directory for Hive</description>
  </property>

  <!-- Enable Hive Interpreter -->
  <property>
    <name>zeppelin.interpreter.group</name>
    <value>hive</value>
    <description>Interpreter group</description>
  </property>

  <!-- Hive configurations -->
  <property>
    <name>zeppelin.interpreter.hive.hive.metastore.client.factory.class</name>
    <value>org.apache.hadoop.hive.metastore.client.HiveMetaStoreClientFactory</value>
    <description>Hive Metastore Client Factory</description>
  </property>

  <property>
    <name>zeppelin.interpreter.hive.hive.server2.thrift.url</name>
    <value>jdbc:hive2://hive-server:10000/default</value>
    <description>Hive Server2 URL</description>
  </property>

</configuration>
